{
    "name": "Sidra",
    "description": "Ryan 自用 Firefox 主题",
    "version": "0.1.4",
    "minVersion": "Firefox 120",
    "homepageURL": "https://github.com/benzBrake/FirefoxCustomize",
    "files": [
        {
            "filename": "userChrome.css",
            "min-version": "122a1"
        },
        {
            "filename": "userContent.css"
        }
    ],
    "options": [
        "userChromeJS.CopyCat.debug",
        {
            "pref": "userChromeJS.Sidra.ControlButton.ShowOnLeft",
            "defaultValue": false
        },
        "extensions.pocket.enabled",
        "userChromeJS.Sidra.DevTools.Compact",
        "userChromeJS.Sidra.AppContent.Rounded.Enabled",
        "userChromeJS.Sidra.Menubar.AccessKey.Disabled",
        "userChromeJS.Sidra.FindBar.Compact",
        {
            "pref": "userChromeJS.Sidra.Tabs.Compact",
            "group": "tabs-bar"
        },
        {
            "pref": "userChromeJS.Sidra.Tabs.DragSpace.Left.Disabled",
            "group": "tabs-bar"
        },
        {
            "pref": "userChromeJS.Sidra.Tabs.DragSpace.Right.Disabled",
            "group": "tabs-bar"
        },
        {
            "pref": "userChromeJS.Sidra.Tabs.DragSpace.Top.Windowed.Enabled",
            "group": "tabs-bar"
        },
        {
            "pref": "userChromeJS.Sidra.Tabs.DragSpace.Top.Maximized.Enabled",
            "group": "tabs-bar"
        },
        {
            "pref": "userChromeJS.Sidra.Tabs.DragSpace.Top.Fullscreen.Enabled",
            "group": "tabs-bar"
        },
        {
            "pref": "userChromeJS.Sidra.Tabs.Style",
            "type": "select",
            "defaultValue": "default",
            "options": [
                {
                    "data-l10n-id": "default-style",
                    "value": "default"
                },
                {
                    "data-l10n-id": "style-1",
                    "value": "1"
                },
                {
                    "data-l10n-id": "style-2",
                    "value": "2"
                },
                {
                    "data-l10n-id": "style-3",
                    "value": "3"
                },
                {
                    "data-l10n-id": "style-4",
                    "value": "4"
                },
                {
                    "data-l10n-id": "style-5",
                    "value": "5"
                },
                {
                    "data-l10n-id": "style-6",
                    "value": "6"
                },
                {
                    "data-l10n-id": "style-7",
                    "value": "7"
                },
                {
                    "data-l10n-id": "style-8",
                    "value": "8"
                },
                {
                    "data-l10n-id": "style-9",
                    "value": "9"
                },
                {
                    "data-l10n-id": "style-10",
                    "value": "10"
                },
                {
                    "data-l10n-id": "style-11",
                    "value": "11"
                },
                {
                    "data-l10n-id": "style-12",
                    "value": "12"
                },
                {
                    "data-l10n-id": "style-13",
                    "value": "13"
                }
            ],
            "group": "tabs-bar"
        },
        {
            "pref": "userChromeJS.Sidra.Tabs.SelectedTabIndicator.Enabled",
            "group": "tabs-bar"
        },
        {
            "pref": "userChromeJS.Sidra.Tabs.SelectedTab.FillWithToolbarBg.Enabled",
            "group": "tabs-bar"
        },
        {
            "pref": "userChromeJS.Sidra.Tabs.NewtabBtn.Pinned",
            "group": "tabs-bar"
        },
        {
            "pref": "userChromeJS.Sidra.Tabs.AllTabsBtn.Visibility",
            "type": "select",
            "options": [
                {
                    "data-l10n-id": "auto",
                    "value": "auto"
                },
                {
                    "data-l10n-id": "always-visible",
                    "value": "visible"
                },
                {
                    "data-l10n-id": "always-hidden",
                    "value": "hidden"
                }
            ],
            "defaultValue": "auto",
            "group": "tabs-bar"
        },
        {
            "pref": "userChromeJS.Sidra.Tabs.TabCounter.Enabled",
            "group": "tabs-bar"
        },
        {
            "pref": "userChromeJS.Sidra.Tabs.Separators.Enabled",
            "group": "tabs-bar"
        },
        {
            "pref": "userChromeJS.Sidra.Tabs.TabsOnBottom.Enabled",
            "group": "tabs-bar"
        },
        {
            "pref": "userChromeJS.Sidra.MenuPopup.Compact",
            "group": "menus"
        },
        {
            "pref": "userChromeJS.Sidra.MenuPopup.DisabledMenu.Disabled",
            "group": "menus"
        },
        {
            "pref": "userChromeJS.Sidra.MenuPopup.DisabledMenu.Icon.Disabled",
            "group": "menus"
        },
        {
            "pref": "userChromeJS.Sidra.Menupopup.Use.Smaller.Text",
            "group": "menus"
        },
        {
            "pref": "userChromeJS.Sidra.ContextMenu.Navigation.Disabled",
            "group": "menus"
        },
        {
            "pref": "userChromeJS.Sidra.Menupopup.Compact.Extensions.Menu",
            "group": "menus"
        },
        {
            "pref": "userChromeJS.Sidra.MenuPopup.SubMenuPopup.Compact",
            "group": "menus"
        },
        {
            "pref": "userChromeJS.Sidra.Urlbar.Compact",
            "group": "urlbar"
        },
        {
            "pref": "userChromeJS.Sidra.Urlbar.Focus.Border.Enabled",
            "group": "urlbar"
        },
        {
            "pref": "userChromeJS.Sidra.Urlbar.Megarbar.Disabled",
            "group": "urlbar"
        },
        {
            "pref": "userChromeJS.Sidra.Urlbar.Popup.Compact",
            "group": "urlbar"
        },
        {
            "pref": "userChromeJS.Sidra.PlacesToolbar.Align.Center",
            "group": "places-toolbar"
        },
        {
            "pref": "userChromeJS.Sidra.PlacesToolbar.IconsOnly.Enabled",
            "group": "places-toolbar"
        },
        {
            "pref": "userChromeJS.Sidra.PlacesToolbar.Compact.Minimum.Enabled",
            "group": "places-toolbar"
        },
        {
            "pref": "userChromeJS.Sidra.Icons.Compact",
            "group": "icons"
        },
        {
            "pref": "userChromeJS.Sidra.Icons.BookmarkFolder.EdgeLike.Enabled",
            "group": "icons"
        },
        {
            "pref": "userChromeJS.Sidra.Icons.CopyIcon.EdgeLike.Enabled",
            "group": "icons"
        },
        {
            "pref": "userChromeJS.Sidra.Icons.ContextMenu.Enabled",
            "group": "icons"
        },
        {
            "pref": "userChromeJS.Sidra.Icons.Extensions.Mods.Enabled",
            "group": "icons"
        }
    ],
    "monitors": [
        {
            "eval": "Services.appinfo.name",
            "targetAttr": "appname"
        },
        {
            "eval": "Services.appinfo.version",
            "targetAttr": "appversion"
        },
        {
            "eval": "Services.appinfo.defaultUpdateChannel",
            "targetAttr": "appchannel"
        },
        {
            "pref": "userChromeJS.Sidra.Tabs.Style",
            "targetAttr": "sidra-tabstyle",
            "defaultValue": "default"
        },
        {
            "pref": "floorp.tabbar.style",
            "targetAttr": "tabbarstyle",
            "defaultValue": "0",
            "isAvailable": "Services.appinfo.name === 'Floorp'"
        },
        {
            "pref": "floorp.browser.tabbar.settings",
            "targetAttr": "tabposition",
            "defaultValue": "0",
            "isAvailable": "Services.appinfo.name === 'Floorp'"
        },
        {
            "pref": "userChromeJS.Sidra.Tabs.AllTabsBtn.Visibility",
            "target": "#alltabs-button",
            "targetAttr": "visibility",
            "defaultValue": "auto"
        },
        {
            "eval": "!Services.prefs.getBoolPref('userChromeJS.Sidra.MenuPopup.Compact', false)",
            "target": "#contentAreaContextMenu",
            "targetAttr": "photoncompact"
        },
        {
            "eval": "!Services.prefs.getBoolPref('userChromeJS.Sidra.MenuPopup.Compact', false)",
            "target": "#tabContextMenu",
            "targetAttr": "photoncompact"
        }
    ],
